<% include ./partials/header %>

	<!-- breadcrumb -->
	<div class="bread-crumb bgwhite flex-w p-l-52 p-r-15 p-t-30 p-l-15-sm">
		<a href="/" class="s-text16">
			Home
			<i class="fa fa-angle-right m-l-8 m-r-9" aria-hidden="true"></i>
		</a>

		<a href="/blog" class="s-text16">
			Blog
			<i class="fa fa-angle-right m-l-8 m-r-9" aria-hidden="true"></i>
		</a>

		<span class="s-text17">
			  <%= data.blogTitle  %>
		</span>
	</div>

	<!-- content page -->
	<section class="bgwhite p-t-60 p-b-25">
		<div class="container">
			<div class="row">
				<div class="col-md-8 col-lg-9 p-b-80">
					<div class="p-r-50 p-r-0-lg">
						<div class="p-b-40">
							<div class="blog-detail-img wrap-pic-w">
								<img src="../uploads/<%= data.blogPic  %>" alt="IMG-BLOG">
							</div>

							<div class="blog-detail-txt p-t-33">
								<h4 class="p-b-11 m-text24">
                                    <%= data.blogTitle  %>
								</h4>

								<div class="s-text8 flex-w flex-m p-b-21">
									<span>
										<%= data.author  %>
										<span class="m-l-3 m-r-6">|</span>
									</span>

									<span>
										<%= data.createdAt  %>
										<span class="m-l-3 m-r-6">|</span>
									</span>


									<span>
										8 Comments
									</span>
								</div>

								<p class="p-b-25">
                                    <%= data.blogContent  %>
								</p>

							</div>

							<div class="flex-m flex-w p-t-20" style="border-bottom: 1px solid #ccc;"></div>


						</div>

						<!-- Leave a comment -->
						<form class="leave-comment">
							<h4 class="m-text25 p-b-14">
								Leave a Comment
							</h4>

							<p class="s-text8 p-b-40">
								Your email address will not be published. Required fields are marked *
							</p>

							<textarea class="dis-block s-text7 size18 bo12 p-l-18 p-r-18 p-t-13 m-b-20" name="comment" placeholder="Comment..."></textarea>

							<div class="bo12 of-hidden size19 m-b-20">
								<input class="sizefull s-text7 p-l-18 p-r-18" type="text" name="name" placeholder="Name *">
							</div>

							<div class="bo12 of-hidden size19 m-b-20">
								<input class="sizefull s-text7 p-l-18 p-r-18" type="text" name="email" placeholder="Email *">
							</div>

							<div class="bo12 of-hidden size19 m-b-30">
								<input class="sizefull s-text7 p-l-18 p-r-18" type="text" name="website" placeholder="Website">
							</div>

							<div class="w-size24">
								<!-- Button -->
								<button class="flex-c-m size1 bg1 bo-rad-20 hov1 s-text1 trans-0-4">
									Post Comment
								</button>
							</div>
						</form>
					</div>
				</div>

				<div class="col-md-4 col-lg-3 p-b-80">
					<div class="rightbar">
						<!-- Search -->
						<div class="pos-relative bo11 of-hidden">
							<input class="s-text7 size16 p-l-23 p-r-50" type="text" name="search-product" placeholder="Search">

							<button class="flex-c-m size5 ab-r-m color1 color0-hov trans-0-4">
								<i class="fs-13 fa fa-search" aria-hidden="true"></i>
							</button>
						</div>

						<!-- Categories -->
						<h4 class="m-text23 p-t-56 p-b-34">
							Kategorije
						</h4>

						<ul>
							<li class="p-t-6 p-b-8 bo6">
								<a href="/category/narukvice" class="s-text13 active1">
									Narukvice
								</a>
							</li>

							<li class="p-t-6 p-b-8 bo7">
								<a href="/category/ogrlice" class="s-text13">
									Ogrlice
								</a>
							</li>

							<li class="p-t-6 p-b-8 bo7">
								<a href="/category/mindjuse" class="s-text13">
									Mindjuše
								</a>
							</li>

							<li class="p-t-6 p-b-8 bo7">
								<a href="/category/salovi-i-esarpe" class="s-text13">
									Šalovi i ešarpe
								</a>
							</li>

							<li class="p-t-6 p-b-8 bo7">
								<a href="/category/dreamcatcher" class="s-text13">
									Dreamcatcher
								</a>
							</li>
							<li class="p-t-6 p-b-8 bo7">
								<a href="/category/akcije-i-rasprodaja" class="s-text13">
									Akcije & Rasprodaja
								</a>
							</li>
						</ul>

						<!-- Featured Products -->
						<h4 class="m-text23 p-t-65 p-b-34">
							Povezane vesti
						</h4>

						<ul class="bgwhite">
                            <% for (var i = 0; i < featured.length; i++) { %>
							<li class="flex-w p-b-20">
								<a href="/blog-detail?id=<%= featured[i]._id %>" class="dis-block wrap-pic-w w-size22 m-r-20 trans-0-4 hov4">
									<img src="../uploads/<%= featured[i].blogPic %>" alt="IMG-PRODUCT">
								</a>

								<div class="w-size23 p-t-5">
									<a href="/blog-detail?id=<%= featured[i]._id %>" class="s-text20">
                                        <%= featured[i].blogTitle %>
									</a>

								</div>
							</li>

                            <% } %>

						</ul>

					</div>
				</div>
			</div>
		</div>
	</section>


<% include ./partials/footer %>


	<!-- Back to top -->
	<div class="btn-back-to-top bg0-hov" id="myBtn">
		<span class="symbol-btn-back-to-top">
			<i class="fa fa-angle-double-up" aria-hidden="true"></i>
		</span>
	</div>

	<!-- Container Selection -->
	<div id="dropDownSelect1"></div>
	<div id="dropDownSelect2"></div>



<!--===============================================================================================-->
	<script type="text/javascript" src="vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
	<script type="text/javascript" src="vendor/animsition/js/animsition.min.js"></script>
<!--===============================================================================================-->
	<script type="text/javascript" src="vendor/bootstrap/js/popper.js"></script>
	<script type="text/javascript" src="vendor/bootstrap/js/bootstrap.min.js"></script>
<!--===============================================================================================-->
	<script type="text/javascript" src="vendor/select2/select2.min.js"></script>
	<script type="text/javascript">
		$(".selection-1").select2({
			minimumResultsForSearch: 20,
			dropdownParent: $('#dropDownSelect1')
		});

		$(".selection-2").select2({
			minimumResultsForSearch: 20,
			dropdownParent: $('#dropDownSelect2')
		});
	</script>
<!--===============================================================================================-->
	<script src="js/main.js"></script>

</body>
</html>
