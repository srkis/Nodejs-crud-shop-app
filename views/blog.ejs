<% include ./partials/header %>
	<!-- Title Page -->
	<section class="bg-title-page p-t-40 p-b-50 flex-col-c-m" style="background-image: url(images/heading-pages-05.jpg);">
		<h2 class="l-text2 t-center">
			Blog
		</h2>
	</section>

	<!-- content page -->
	<section class="bgwhite p-t-60">
		<div class="container">
			<div class="row">
				<div class="col-md-8 col-lg-9 p-b-75">
					<div class="p-r-50 p-r-0-lg">
						<!-- item blog -->

                        <% for (var i = 0; i < data.length; i++) { %>
						<div class="item-blog p-b-80">
							<a href="/blog-detail?id=<%= data[i]._id %>" class="item-blog-img pos-relative dis-block hov-img-zoom">

								<img style="width: 650px;height: 600px  ;" src="../uploads/<%= data[i].blogPic %>" alt="IMG-BLOG">

								<span class="item-blog-date dis-block flex-c-m pos1 size17 bg4 s-text1">
									<%= data[i].createdAt %>
								</span>
							</a>

							<div class="item-blog-txt p-t-33">
								<h4 class="p-b-11">
									<a href="/blog-detail?id=<%= data[i]._id %>" class="m-text24">
                                        <%= data[i].blogTitle %>
									</a>
								</h4>

								<div class="s-text8 flex-w flex-m p-b-21">
									<span>
									Author: <span style="color:#e65540;"><%= data[i].author %></span>
										<span class="m-l-3 m-r-6">|</span>
									</span>

									<span>
										8 Comments
									</span>
								</div>

								<p class="p-b-12">
                                    <%= data[i].blogContent.substring(0, 400) %> ...
								</p>

								<a href="/blog-detail?id=<%= data[i]._id %>" class="s-text20">
									Nastavi sa čitanjem
									<i class="fa fa-long-arrow-right m-l-8" aria-hidden="true"></i>
								</a>
							</div>
						</div>

                        <% } %>

					</div>

					<!-- Pagination -->
					<div class="pagination flex-m flex-w p-r-50">
						<a href="#" class="item-pagination flex-c-m trans-0-4 active-pagination">1</a>
						<a href="#" class="item-pagination flex-c-m trans-0-4">2</a>
					</div>
				</div>

				<div class="col-md-4 col-lg-3 p-b-75">
					<div class="rightbar">
						<!-- Search -->
						<div class="pos-relative bo11 of-hidden">
							<input class="s-text7 size16 p-l-23 p-r-50" type="text" name="search-product" placeholder="Search">

							<button class="flex-c-m size5 ab-r-m color1 color0-hov trans-0-4">
								<i class="fs-13 fa fa-search" aria-hidden="true"></i>
							</button>
						</div>

						<!-- Categories -->
						<h4 class="m-text23 p-t-56 p-b-34">
							Kategorije
						</h4>

						<ul>
							<li class="p-t-6 p-b-8 bo6">
								<a href="/category/narukvice" class="s-text13 active1">
									Narukvice
								</a>
							</li>

							<li class="p-t-6 p-b-8 bo7">
								<a href="/category/ogrlice" class="s-text13">
									Ogrlice
								</a>
							</li>

							<li class="p-t-6 p-b-8 bo7">
								<a href="/category/mindjuse" class="s-text13">
									Mindjuše
								</a>
							</li>

							<li class="p-t-6 p-b-8 bo7">
								<a href="/category/salovi-i-esarpe" class="s-text13">
									Šalovi i ešarpe
								</a>
							</li>

							<li class="p-t-6 p-b-8 bo7">
								<a href="/category/dreamcatcher" class="s-text13">
									Dreamcatcher
								</a>
							</li>
							<li class="p-t-6 p-b-8 bo7">
								<a href="/category/akcije-i-rasprodaja" class="s-text13">
									Akcije & Rasprodaja
								</a>
							</li>
						</ul>

						<!-- Featured Products -->
						<h4 class="m-text23 p-t-65 p-b-34">
							Povezane vesti
						</h4>

						<ul class="bgwhite">

                            <% for (var i = 0; i < data.length; i++) { %>

                            <% if(i > 4 ){ break } %> <!-- i pocinje od nule, ako ima vise od 5 postova radi break -->

							<li class="flex-w p-b-20">
								<a href="/blog-detail?id=<%= data[i]._id %>" class="dis-block wrap-pic-w w-size22 m-r-20 trans-0-4 hov4">
									<img src="../uploads/<%= data[i].blogPic %>" alt="IMG-PRODUCT">
								</a>

								<div class="w-size23 p-t-5">
									<a href="/blog-detail?id=<%= data[i]._id %>" class="s-text20">
                                        <%= data[i].blogTitle %>
									</a>

								</div>
							</li>

							<% } %>

						</ul>

					</div>
				</div>
			</div>
		</div>
	</section>


<% include ./partials/footer %>


	<!-- Back to top -->
	<div class="btn-back-to-top bg0-hov" id="myBtn">
		<span class="symbol-btn-back-to-top">
			<i class="fa fa-angle-double-up" aria-hidden="true"></i>
		</span>
	</div>

	<!-- Container Selection -->
	<div id="dropDownSelect1"></div>
	<div id="dropDownSelect2"></div>



<!--===============================================================================================-->
	<script type="text/javascript" src="vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
	<script type="text/javascript" src="vendor/animsition/js/animsition.min.js"></script>
<!--===============================================================================================-->
	<script type="text/javascript" src="vendor/bootstrap/js/popper.js"></script>
	<script type="text/javascript" src="vendor/bootstrap/js/bootstrap.min.js"></script>
<!--===============================================================================================-->
	<script type="text/javascript" src="vendor/select2/select2.min.js"></script>
	<script type="text/javascript">
		$(".selection-1").select2({
			minimumResultsForSearch: 20,
			dropdownParent: $('#dropDownSelect1')
		});

		$(".selection-2").select2({
			minimumResultsForSearch: 20,
			dropdownParent: $('#dropDownSelect2')
		});
	</script>
<!--===============================================================================================-->
	<script src="js/main.js"></script>

</body>
</html>
