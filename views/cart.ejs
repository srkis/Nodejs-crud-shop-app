<script>

    $(document).ready(function() {
        $('#telefon').bind("cut copy paste drag drop", function(e) {
            e.preventDefault();
        });
    });
    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode > 31 && (charCode < 48 || charCode > 57))
            return false;
        return true;
    }


    var shoppingCart =  JSON.parse(localStorage.getItem("shoppingCart"));

    if(shoppingCart == null){
        document.getElementById('cartNum').innerHTML = 0;
        var wrapper = document.getElementById("table-cart");
        var myHTML = '';

        myHTML += '<tr class="table-row">'+

            '<h5>Vasa korpa je prazna</h5><br>'+

            ' </tr>';

        wrapper.innerHTML = myHTML

    }else{

        shoppingCart.cartTotal = 0;

        var wrapper = document.getElementById("table-cart");

        var myHTML = '';

        myHTML +=
            '<tr  class="table-head">'+
            '<th class="column-1"></th>'+
            '<th class="column-2">Proizvod</th>'+
            '<th class="column-3">Cena</th>'+
            '<th class="column-4 p-l-70">Količina</th>'+
            '<th class="column-5">Ukupno</th>'+
            '</tr>'

        for (var i = 0; i < shoppingCart.length; i++) {

      myHTML +=
				'<tr class="table-row">'+
                '<td class="column-1">'+
                '<div class="cart-img-product b-rad-4 o-f-hidden">'+
         		'<img style="width: 90px; height: 70px;" src= "'+shoppingCart[i].imgUrl+'" alt="IMG">'+

                '</div>'+
                '</td>'+
                '<td class="column-2">'+shoppingCart[i].nameProduct+'</td>'+
            '<td class="column-3">'+shoppingCart[i].price+'</td>'+
            '<td class="column-4">'+
                '<div class="flex-w bo5 of-hidden w-size17">'+
                '<button class="btn-num-product-down color1 flex-c-m size7 bg8 eff2">'+
                '<i class="fs-12 fa fa-minus" aria-hidden="true"></i>'+
                '</button>'+
                '<input class="size8 m-text18 t-center num-product" type="number" name="num-product1" value="'+shoppingCart[i].count+'">'+

                '<button class="btn-num-product-up color1 flex-c-m size7 bg8 eff2">'+
                '<i class="fs-12 fa fa-plus" aria-hidden="true"></i>'+
                '</button>'+
                '</div>'+
                '</td>'+
                '<td class="column-5">'+shoppingCart[i].itemTotal+'</td>'+
	  			'</tr>';

            shoppingCart.cartTotal += Number(shoppingCart[i].itemTotal);

        }

        document.getElementById('showTotal').innerHTML=shoppingCart.cartTotal + ' ' + 'din';
        document.getElementById('total').innerHTML=shoppingCart.cartTotal + ' ' + ' + Dostava';

        wrapper.innerHTML = myHTML

    }









